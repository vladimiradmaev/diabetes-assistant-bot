# Обязательные переменные
# TELEGRAM_BOT_TOKEN: Токен бота от @BotFather
# Формат: bot_id:auth_token (например, 123456789:AAHdqTcvCH1vGWJxfSeofSAs0K5PALDsaw)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# GEMINI_API_KEY: API ключ от Google AI Studio  
# Формат: Должен начинаться с "AIza" (например, AIzaSyDaGmWKa4JsXZ-HjGw47_X2-19_E1rZbOE)
GEMINI_API_KEY=your_gemini_api_key_here

# Переменные базы данных (есть значения по умолчанию)
# DB_HOST: Хост базы данных (localhost, IP адрес или hostname)
DB_HOST=localhost
# DB_PORT: Порт базы данных (1-65535)
DB_PORT=5432
# DB_USER: Пользователь базы данных (обязательный)
DB_USER=postgres
# DB_PASSWORD: Пароль базы данных (опциональный)
DB_PASSWORD=postgres
# DB_NAME: Имя базы данных (обязательное)
DB_NAME=diabetes_helper

# Конфигурация логирования
# LOG_LEVEL: Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info
# LOG_OUTPUT: Путь к файлу логов или "stdout" для вывода в консоль
LOG_OUTPUT=logs/app.log
# LOG_FORMAT: Формат логов ("json" или "text")
LOG_FORMAT=json
